%h2 Settings

- if flash[:notice]
  .alert.alert-success
    %button{ class: 'close', data: {dismiss: 'alert'} } x
    = flash[:notice]
- if flash[:warning]
  .alert.alert-error
    %button{ class: 'close', data: {dismiss: 'alert'} } x
    = flash[:warning]

- if current_user
  = form_for(current_user) do |f|
    %fieldset
      .control-group
        = f.label :name, "Twitter Handle", class: 'control-label'
        .controls
          %span
            = "@#{current_user.name}"
    %fieldset
      .control-group
        = f.label :filter_regex, nil, class: 'control-label'
        .controls
          = f.text_field :filter_regex
        = f.submit 'Update', class: 'btn'